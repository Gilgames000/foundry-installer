{
    "name": "foundry-installer",
    "description": "A Node.js installer for the Foundry suite of tools.",
    "version": "0.1.2",
    "author": "Gilgame≈°",
    "license": "MIT",
    "keywords": [
        "install",
        "installer",
        "foundry",
        "foundry-rs",
        "foundryup",
        "forge",
        "anvil",
        "cast"
    ],
    "repository": "https://github.com/Gilgames000/foundry-installer",
    "main": "./src/install.js",
    "bin": {
        "forge": "./bin/forge",
        "anvil": "./bin/anvil",
        "cast": "./bin/cast"
    },
    "scripts": {
        "preinstall": "node ./src/install.js",
        "prepublishOnly": "rm -rf ./bin || echo ''"
    },
    "devDependencies": {
        "@foundry-rs/easy-foundryup": "^0.1.3",
        "dedent": "^0.7.0"
    },
    "type": "module",
    "packageManager": "pnpm@8.6.0"
}
